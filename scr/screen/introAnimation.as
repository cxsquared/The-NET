package screen {		//Flash imports	import flash.display.MovieClip;	import flash.events.Event;	import flash.display.Stage;		//Tweening imports	import com.greensock.TweenLite;	import com.greensock.easing.*;		public class introAnimation extends MovieClip {				//Vars		private var _stage:Stage;		private var _main:Main;		private var _score:Number;				public function introAnimation() {			init();		}				private function init():void{			//Init variables			this.alpha = 0;			_stage = Main.getStage();			_main = Main.getInstance();						//Reset score			_score = Main.getScore();			Main.setScore(-_score);			//trace("Score set to " + Main.getScore());												//Stoping animation			netAnimation.netBoard.gotoAndStop(1);						//Tween in			TweenLite.to(this, 0.5, {alpha: 1});						//Event Handler			this.addEventListener(Event.ENTER_FRAME, loop);			this.addEventListener(Event.REMOVED_FROM_STAGE, onRemoved);						//Add to stage			_main.addChild(this);		}				//Loop		private function loop(event:Event):void{			//On fade in			if( this.alpha == 1){				//Start animation				netAnimation.netBoard.play();			}			//When animation finished			//trace(netAnimation.currentFrame);			if( netAnimation.currentFrame >= 199){				//Stop animation				netAnimation.stop();				//Fade out				TweenLite.to(this, 0.5, {alpha:0});				//Remove self				if( this.alpha == 0){					if (this.parent) {						this.parent.removeChild(this);						_stage.dispatchEvent(new Event("introComplete", true));					}				}			}		}				private function onRemoved(event:Event):void {			//Remove event Handler			this.removeEventListener(Event.ENTER_FRAME, loop);			this.removeEventListener(Event.REMOVED_FROM_STAGE, onRemoved);		}	}	}