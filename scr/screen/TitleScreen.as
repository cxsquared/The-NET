package screen {		import flash.display.MovieClip;	import flash.events.KeyboardEvent;	import flash.events.Event;	import flash.display.Stage;		import com.greensock.TweenLite;	import com.greensock.easing.*;		public class TitleScreen extends MovieClip {				private var _stage:Stage;		private var _jPressed:Boolean;				public function TitleScreen() {			_stage = Main.getStage();			init();		}				private function init():void {			//Vars			_jPressed = false;						//Event Handlers			_stage.addEventListener(KeyboardEvent.KEY_UP, keyUpHandler);			addEventListener(Event.ENTER_FRAME, screenLoop);			addEventListener(Event.REMOVED_FROM_STAGE, onRemoved);						//Set alpha for fade in			this.alpha = 0;						//Add this			Main.getInstance().addChild(this);						//tween in			TweenLite.to(this, 0.5, {alpha: 1});						trace("Title Ready");		}				//Screen loop		private function screenLoop(event:Event):void{			if( _jPressed){				TweenLite.to(this, 0.5, {alpha: 0});				if( this.alpha <= 0){					Main.getInstance().removeChild(this);					_stage.dispatchEvent(new Event("titleRemoved", true));				}			}						if(Main.getScore() == 0){				score_txt.text = "";			}			else{				score_txt.text = "Score: " + Main.getScore();			}		}				private function keyUpHandler(event:KeyboardEvent):void{			if (event.keyCode == 74){				_jPressed = true;			}		}				private function onRemoved(event:Event):void {			_stage.removeEventListener(KeyboardEvent.KEY_UP, keyUpHandler);			removeEventListener(Event.ENTER_FRAME, screenLoop);			removeEventListener(Event.REMOVED_FROM_STAGE, onRemoved);			trace("Title Removed");		}	}	}